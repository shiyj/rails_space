<h1>Listing posts</h1>

<table>
  <tr>
    <th>Blog</th>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.blog_id %></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= link_to 'Show', blog_post_path(post.blog.id,post.id) %></td>
    <td><%= link_to 'Edit', edit_blog_post_path(post.blog,post) %></td>
    <td><%= link_to 'Destroy', [post.blog,post], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_blog_post_path %>
